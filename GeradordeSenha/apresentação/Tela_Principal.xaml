<Window x:Class="GeradordeSenha.apresentação.Tela_Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tela Principal" Height="650" Width="940"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Definindo duas colunas: Menu lateral e conteúdo -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Menu lateral fixo -->
            <ColumnDefinition Width="*"/>
            <!-- Área de conteúdo -->
        </Grid.ColumnDefinitions>

        <!-- Menu lateral -->
        <DockPanel>
            <StackPanel Background="#2C3E50" Width="200" Grid.Column="0" VerticalAlignment="Stretch">
                <TextBlock Text="Menu" FontSize="20" Foreground="White" Margin="10" />
                <Button Content="Senhas" Click="AbrirTelaSenhas" Margin="5" />
                <Button Content="Cadastro" Click="AbrirTelaCadastro" Margin="5" />
                <Button Content="Configurações" Click="AbrirTelaConfiguracoes" Margin="5" />
            </StackPanel>
        </DockPanel>

        <!-- Área de Conteúdo -->
        <ContentControl Name="ConteudoFrame" Margin="0" Grid.Column="1" VerticalAlignment="Top"/>
    </Grid>
</Window>
